<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buttercell.survy.student.StudentUnits">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:text="Here are the units offered for"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUnitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="BIF" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/unitList"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@id/txtUnitName"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />


    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitList"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorAccent"
        android:text="FINISH"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
