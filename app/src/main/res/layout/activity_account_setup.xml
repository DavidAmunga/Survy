<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buttercell.survy.student.StudentAccountSetup">

    <com.rakshakhegde.stepperindicator.StepperIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stepperIndicator"
        app:stpi_stepCount="2"
        android:layout_margin="15dp"
        app:stpi_showLabels="true"
        app:stpi_labels="@array/stepLabels"
        />

    <com.buttercell.survy.helpers.NonSwipeableViewPager
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/viewPager"
        android:layout_below="@id/stepperIndicator"

        ></com.buttercell.survy.helpers.NonSwipeableViewPager>

</RelativeLayout>
